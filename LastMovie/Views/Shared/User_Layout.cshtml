@using LastMovie.Controllers
@using LastMovie.Models;

@{
	AppDbContext db = new AppDbContext();
	if (UserController.user.Count() != 0)
	{
		var user = UserController.user.FirstOrDefault();
		ViewBag.TrCount = db.CartTable.Where(x => x.RoleID == user.RoleId && x.Buy == false && x.InstallmentLastBuy == false).Count();
	}
	else
	{
		ViewBag.TrCount = 0;
	}

}

