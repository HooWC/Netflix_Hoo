<script>

	$(".mycomment").css({
		"background":"red",
		"border-radius":"5px"
	});

	$(function(){
		$.ajax({
			
			type:"GET",
			url:"/Ajax/Master_Get_Comment",
			dataType:"json",
			success:function(data){
				getCom(data)
			}

		})
	})

	function getCom(data){

		$.each(data,function(x,y){

			var del = `<button class="mybbtt btn btn-primary btn-layer-3_1" value="${y.connID}">
							Delete
							<i class="fa-solid fa-trash"></i>
						</button>`;

			$("#cd-timeline").append(`

				<div class="cd-timeline-block show">
					<div class="cd-timeline-img cd-movie">
					</div>

					<div class="cd-timeline-content">
						<div class="flex">
							<img src="/Image/UserHead/${y.head}" />
							<h2>${y.user_Name}</h2>
						</div>

						<p>${y.commentWord}</p>
						<div class="button-container">
							${del}
						</div>
						<span class="cd-date">${y.createdDate}</span>
					</div>
				</div>
			`)	
		})

		$(".mybbtt").click(function(){
			$.ajax({
				type:"POST",
				url:"/Master/Delete_Conn",
				dataType:"json",
				data:{
					ID:$(this).val()
				},
				success:function(data){
					$("#cd-timeline").empty();
                     getCom(data);
					
							
				}
			})
		})
		
		$(".container_cc").css("display","block");
		var rowsTotal = $("#cd-timeline .show").length;
		console.log("rowsTotal1   " + rowsTotal)
		var rowShown = 5;
		var numPages = rowsTotal / rowShown;
		console.log("numpage1  " + numPages)
		
		$("#cd-timeline .show").slice(0,rowShown).show();

		$("#cv").empty();
		for(var i = 0 ; i < numPages;i++){
			var pageNum = i+1;

			$("#cv").append(`<li><a class="back" rel='${i}'>${pageNum}</a></li>`)
			$(".back").first().css("background","red");
		}

		$("#cv a").click(function(){
					$(".back").css("background","#468599");
					$(this).css("background","red");

					var currPage = $(this).attr("rel")
					page = currPage

					var startItem = currPage * rowShown;
					var endItem = startItem + rowShown;
					var index = $(this).parent().index();

					$("#cd-timeline .show").css("opacity","0").hide().slice(startItem,endItem).css("display","block").animate({opacity:1},300)

				})

		$("#prev").click(function(){

					if(page != 0){
						var num = page - 1;
						page = num;
						var startItem = num * rowShown;
						var endItem = startItem + rowShown;

						$(".back").css("background","#468599");
						$(".back").eq(page).css("background","red");

						$("#cd-timeline .show").css("opacity","0").hide().slice(startItem,endItem).css("display","block").animate({opacity:1},300)

					}

				})

		$("#next").click(function(){
					var n = $(".back").last().attr("rel");

					if(page != n){
						var num1 = parseInt(page) + 1;
						page = num1;
						var startItem = num1 * rowShown;
						var endItem = startItem + rowShown;

						$(".back").css("background","#468599");
						$(".back").eq(page).css("background","red");

						$("#cd-timeline .show").css("opacity","0").hide().slice(startItem,endItem).css("display","block").animate({opacity:1},300)
					}

				})

		

	}


</script>