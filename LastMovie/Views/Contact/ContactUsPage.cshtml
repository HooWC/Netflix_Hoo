@{
	ViewData["Title"] = "ContactUsPage";
	Layout = null;
}



<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:400,400i,600,700">
	<title>Contact Form - Day 1</title>
	<link rel="stylesheet" href="~/css/Contact_Us/Contact_Css.css" />
</head>

<body>

	<header class="showcase">

		<div class="logo">
			<img src="https://i.ibb.co/r5krrdz/logo.png">
		</div>

		<div class="container">
			<form class="form">
				<h1 class="form-title">Message me</h1>
				<div class="grid">
					<div class="form-group">
						<input type="text" name="name" id="name" placeholder="Full name">
					</div>
					<div class="form-group">
						<input type="email" name="email" id="email" placeholder="Your email">
					</div>
					<div class="form-group">
						<input type="text" name="subject" id="subject" placeholder="Subject">
					</div>
					<div class="form-group">
						<textarea name="message" id="message" placeholder="Your message goes here"></textarea>
					</div>

					<div class="flex">
						<a class="btn btn2" href="~/MyHomeMovie/Home_Home">Back To Home</a>
					</div>
					<div class="flex">
						<a class="btn">Send Message</a>
					</div>
			</form>
		</div>

	</header>


</body>

</html>

