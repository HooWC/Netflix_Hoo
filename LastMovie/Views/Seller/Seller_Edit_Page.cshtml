		.my_box .container_my .form-container .form .myimg #sub {
			position: absolute;
			margin-top: 150px;
			margin-left: 5px;
			padding: 8px 20px;
			border-radius: 10px;
			transition: all 0.3s;
			/*font-weight: 600;*/
		}

			.my_box .container_my .form-container .form .myimg #sub:hover {
				box-shadow: 0 0 20px lightcoral, 0 0 60px lightcoral;
			}

		.my_box .container_my .form-container .form .myimg #myIcon {
			position: absolute;
			z-index: 30;
			opacity: 0;
			width: 100%;
			height: 100%;
			border-radius: 100%;
			border: none;
			cursor: pointer;
			background: transparent;
		}

