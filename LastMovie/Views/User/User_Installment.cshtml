<script>
		// '.tbl-content' consumed little space for vertical scrollbar, scrollbar width depend on browser/os/platfrom. Here calculate the scollbar width .
	$(window).on("load resize ", function() {
	  var scrollWidth = $('.tbl-content').width() - $('.tbl-content table').width();
	  $('.tbl-header').css({'padding-right':scrollWidth});
	}).resize();


	$(function(){

		$.ajax({

			type:"GET",
			url:"/Ajax/Get_User_Installment_Table",
			dataType:"json",
			success:function(data){
				console.log(data)
				$.each(data,function(x,y){
					var n = 0 + 1;
					$("#tbody").append(`

						<tr>
							<td>${n}</td>
							<td>${y.transactionStatus}</td>
							<td>RM ${y.total.toFixed(2)}</td>
							<td>${y.paidTime}</td>
							<td><a type="button" class="btn btn-outline-warning" href="/User/User_Installment_View?TrID=${y.transactionId}">PAY</button></td>
						</tr>

					`)
				})


			}


		})



	})



</script>