<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>

	var inputGmail = false;
	var inputPassword = false;

	$(function(){

		$("#MyGmail").keyup(function(){
			$("#MyGmail").css("border","none");
			if($(this).val() == "")
			{
				inputGmail = false;
			}
			else
			{
				inputGmail = true;
			}

			mmon()
		})

		$("#MyPassword").keyup(function(){
			$("#MyPassword").css("border","none");
			if($(this).val() == "")
			{
				inputPassword = false;
			}
			else
			{
				inputPassword = true;
			}

			mmon()
		})

		$("#mysubmit").click(function(){

			$.ajax({

				type:"POST",
				url:"/Ajax/User_ForgotPassword",
				dataType:"json",
				data:{
					myGmail:$("#MyGmail").val(),
					myPassword:$("#MyPassword").val()
				},
				success:function(data){
					if(data == true)
					{
						window.location.href="/Loading/Loading_SignIN";
					}
					else if(data == false)
					{
						$("#MyPassword").css("border","2px solid red");

					}else if(data == "gmail")
					{
						$("#MyGmail").css("border","2px solid red");
					}
				}
			})
		})//my

		$("#myclose").click(function(){
			$("#MSG").css("display","none");
		})


	})

	function mmon(){
		if(inputGmail == true && inputPassword == true ){
			$("#mysubmit").prop("disabled",false)
		}else if(inputGmail == false || inputPassword == false){
			$("#mysubmit").prop("disabled",true)
		}
	}






</script>



